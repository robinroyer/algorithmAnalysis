def bucket_sortrecurs(seq):
    nbbucket=len(seq)
    biggest = seq[0]
    lowest = seq[0]
    for number in seq:
        if number < lowest :
            lowest = number
        if number > biggest:
            biggest = number
    if biggest == lowest :
        return seq
    buckets = []
    for j in range (nbbucket) :
        buckets.append([])
    for number in seq:
        buckets[int((number-lowest)* (nbbucket-1) / (biggest - lowest ) )].append(number)
    for tab in buckets :
        if len(tab)>1 :
            tab=bucket_sortrecurs(tab)
        
    new_list = []
    for bucket in buckets :
        for number in bucket :
            new_list.append(number)        
    return new_list
